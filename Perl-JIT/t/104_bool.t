    opgrep => [@ops{qw(cond_expr)}],
    output => 3,
    input  => [1, 2, 3, 4, 5], },
  { name   => 'complex ternary on false branch',
    func   => build_jit_test_sub('$a, $b, $c, $d, $e', 'my $x = ($a ? $b : $c ? $d : $e);', '$x'),
    opgrep => [@ops{qw(cond_expr)}],
    output => 4,
    input  => [0, 2, 3, 4, 5], },
  { name   => 'num ==, int, true',
    func   => build_jit_test_sub('$a, $b', 'my $x = ($a == $b);', '$x'),
