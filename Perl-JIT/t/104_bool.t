  { name   => 'num <, false',
    func   => build_jit_test_sub('$a, $b', 'my $x = ($a < $b);', '$x'),
    opgrep => [$ops{lt}],
    output => 0, # FIXME should be ''
    input  => [1, 1], },
  { name   => 'num <, true',
    func   => build_jit_test_sub('$a, $b', 'my $x = ($a < $b);', '$x'),
    opgrep => [$ops{lt}],
    output => 1,
    input  => [1, 2], },
  { name   => 'num <=, true',
    func   => build_jit_test_sub('$a, $b', 'my $x = ($a <= $b);', '$x'),
    opgrep => [$ops{le}],
    output => 1,
    input  => [1.1, 1.1], },
  { name   => 'num <=, false',
    func   => build_jit_test_sub('$a, $b', 'my $x = ($a <= $b);', '$x'),
    opgrep => [$ops{le}],
    output => 0, # FIXME should be ''
    input  => [3, 2], },
  { name   => 'num >, true',
    func   => build_jit_test_sub('$a, $b', 'my $x = ($a > $b);', '$x'),
