    input  => [1, 1], },
  { name   => 'num >=, true',
    func   => build_jit_test_sub('$a, $b', 'no warnings; my $x = ($a >= $b);', '$x'),
    opgrep => [$ops{ge}],
    output => 1,
    input  => ["123asd", 2], },
  { name   => 'num >=, true',
    func   => build_jit_test_sub('$a, $b', 'my $x = ($a >= $b);', '$x'),
    opgrep => [$ops{ge}],
    output => 1,
    input  => [2, 2], },
